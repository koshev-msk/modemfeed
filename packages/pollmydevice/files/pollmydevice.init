#!/bin/sh /etc/rc.common

START=99
STOP=10
USE_PROCD=1

DIR=/sbin
PROG=pollmydevice

error()
{
	echo "${initscript}:" "$@" 1>&2
}

check_client_id()
{
	config_get CLIENT_ID "$1" client_id
	if [ -z "$CLIENT_ID" ]; then
		. /usr/share/libubox/jshn.sh
		json_load "$(ubus call system board)"
		json_get_var MODEL model
		case "$MODEL" in
			"TELEOFIS LT70")
				CLIENT_ID=$(head -c 1000 /dev/urandom | tr -dc '0-9' | cut -c -15)
			;;
		esac
		uci_set pollmydevice "$1" client_id "$CLIENT_ID"
		uci_commit pollmydevice
	fi
}

start_service_daemon()
{
	procd_open_instance
	procd_set_param command "$DIR/$PROG"
	procd_set_param respawn
	procd_close_instance
}

start_service()
{
	config_load 'pollmydevice'
	config_foreach check_client_id 'interface'
	start_service_daemon
}

service_triggers()
{
	procd_add_reload_trigger 'pollmydevice'
}

stop()
{
	service_stop $DIR/$PROG
}

reload_service()
{
	service_stop $DIR/$PROG
	start_service
}
